{
	"compilerOptions": {
		"sourceRoot": "scripts/",
		"inlineSourceMap": true,
		"outDir": "browser/scripts/",

		"module": "es2022",
		"target": "es2016",

		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,

		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,

		"skipLibCheck": true
	},
	"exclude": [
		"node_modules/",
		"browser/",
		"functions/"
	],
	"include": [
		"./scripts/**/*"
	]
}
